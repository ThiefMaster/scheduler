[flake8]
max-line-length = 120

# decent quote styles
inline-quotes = single
multiline-quotes = single
docstring-quotes = double
avoid-escape = true

extend-exclude =
    build
    dist
    *.egg-info
    node_modules
    .*/

ignore =
    # allow omitting whitespace around arithmetic operators
    E226
    # don't require specific wrapping before/after binary operators
    W503
    W504
